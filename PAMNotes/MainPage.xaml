<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMNotes.MainPage">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <Editor Placeholder="Digite aqui sua anotação" 
                HeightRequest="300"
                x:Name="NoteEditor"/>
        
        
        <Label 
            x:Name="TextLabel"/>

        

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Salvar" WidthRequest="150" x:Name="SaveButton" Clicked="SaveButton_Clicked" />
            <Button Text="Apagar" WidthRequest="150" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"/>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>

</ContentPage>